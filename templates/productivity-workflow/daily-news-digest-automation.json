        "text": "ðŸ“° *Daily Tech Digest*\n\n{{ $('AI News Summarizer').item.json.response }}",
        "additionalFields": {
          "parse_mode": "Markdown"
        }
      },
      "id": "telegram-send",
      "name": "Send Telegram Message",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [1200, 580],
      "credentials": {
        "telegramApi": {
          "id": "telegram-bot",
          "name": "Telegram Bot"
        }
      }
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "email",
              "value": "your-email@example.com"
            },
            {
              "name": "telegram_chat_id",
              "value": "your-telegram-chat-id"
            },
            {
              "name": "preferred_categories",
              "value": "technology,programming,ai"
            }
          ]
        },
        "options": {}
